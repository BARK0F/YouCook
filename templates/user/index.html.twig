{% extends 'base.html.twig' %}

{% block title %}{{ app.user.firstname }} | Profile{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block body %}

    <div class="container-lg">
        {{ form_start(form) }}

        <h1 class="form__title">Mon profil</h1>

        {{ form_row(form.firstname, {'label': 'Prénom'}) }}
        {{ form_row(form.lastname, {'label': 'Nom'}) }}
        {{ form_row(form.email) }}
        {{ form_row(form.biography, {'label': 'Biographie'}) }}
        {{ form_row(form.allergens, {'label': 'Allergies'}) }}

        <button type="submit" class="form__button">Mettre à jour mon profil</button>

        {{ form_end(form) }}
    </div>

    <h1>Liste des Users</h1>
    <ul>
        {% for user in users %}
            <li><a href="{{ path('app_user_show_recipe', {'id': user.id}) }}">{{ user.firstname }}, {{ user.lastname }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
